# Google OAuth (optional â€” auth features disabled without it)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
SESSION_SECRET=
OAUTH_STATE_SECRET=

# API Key for POST /api/digests and PUT /api/config
API_KEY=

# Server
DIGEST_PORT=8767

# Allowed origins (comma-separated, defaults to localhost)
ALLOWED_ORIGINS=localhost,127.0.0.1

# Lark webhook for feedback notifications (optional)
# Create at: Lark > Group > Settings > Bots > Add Bot > Custom Bot (Webhook)
# Format: https://open.larksuite.com/open-apis/bot/v2/hook/<token>
FEEDBACK_LARK_WEBHOOK=

# Collector
COLLECTOR_INTERVAL=300          # seconds between collection cycles (default: 300)
COLLECTOR_CONCURRENCY=5         # max parallel source fetches (default: 5)
DEFAULT_SOURCE_ID=              # source ID shown to non-logged-in users

# LLM (for digest generation)
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=90                  # seconds (default: 90)
GENERATOR_MAX_ITEMS=300         # max raw_items to send per digest (default: 300)